---
import Layout from "@/layouts/Layout.astro";
import { ABOUT_CONTENT } from "@/lib/about";
---

<Layout
  title="Rody | Sobre Mí"
  description="Conoce un poco sobre quién es Rody Huancas"
>
  <section class="flex flex-col gap-10 pb-10 md:w-3/4 mx-auto">
    <h3 class="text-4xl text-primary-100/90 font-medium">
      {ABOUT_CONTENT.title}
    </h3>

    <div class="flex flex-col gap-5">
      <p>{ABOUT_CONTENT.description}</p>
      {
        ABOUT_CONTENT.resume.map((paragraph) => (
          <p class="text-primary-100/80">
            {paragraph}
          </p>
        ))
      }
    </div>
  </section>
</Layout>
