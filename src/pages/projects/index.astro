---
// layouts
import Layout from "@/layouts/Layout.astro";

// data
import { PROJECTS } from "@/lib/projects";

// components
import CardProject from "@/components/projects/CardProject.astro";
---

<Layout
  title={`Rody | Mis Proyectos`}
  description="CatÃ¡logo de proyectos de mi portafolio"
>
  <section class="mb-7 flex flex-col gap-7">
    <div class="flex flex-col gap-4">
      <h1 class="text-3xl text-primary-100/90">Mis Proyectos</h1>
      <p class="font-light text-lg">
        Si deseas ver todos mis proyectos, puedes visitar mi
        <a
          href={"https://github.com/rody-huancas"}
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium underline text-secondary/90 hover:text-secondary"
          aria-label={`Visitar GitHub de Rody Huancas`}
        >
          GitHub
        </a>
      </p>
    </div>

    <div
      class="grid md:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2 2xl:grid-cols-3 items-center gap-x-7 gap-y-10 mb-5"
    >
      {PROJECTS.map((project) => <CardProject project={project} />)}
    </div>
  </section>
</Layout>
