---
import type { SocialMediaInteface } from '@/models/sidebar';

interface Props {
  social: SocialMediaInteface;
}

const { social } = Astro.props;
---

<a
  href={social.path}
  target="_blank"
  class="py-2.5 px-6 rounded-lg flex items-center justify-center gap-2 text-primary-100/70 border border-primary-200 hover:bg-primary-200/10 transition-colors duration-200 ease-linear"
>
  <social.icon />
  {social.name}
</a>
