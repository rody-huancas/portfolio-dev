---
interface Props {
  path: string;
  title: string;
}

const { path, title } = Astro.props;
---

<a
  class="group relative inline-block text-sm font-medium text-dark-color text-center focus:outline-none focus:ring"
  href={path}
>
  <span
    class="absolute inset-0 border border-primary-100/90 group-active:border-primary-100/90"
  ></span>
  <span
    class="block border border-primary-100/90 bg-primary-100/90 px-12 py-3 transition-transform duration-300 ease-in-out active:border-primary-100/90 active:bg-primary-100/90 group-hover:-translate-x-1 group-hover:-translate-y-2 text-base"
  >
    {title}
  </span>
</a>
