---
import { Image } from "astro:assets";

import UrlIcon from "@/icons/UrlIcon.astro";
import GithubIcon from "@/icons/GithubIcon.astro";
---

<div class="flex flex-col gap-5">
  <Image
    src={"https://framerusercontent.com/images/MdiAOUoDuKZp0iCQ6fLzGdCMGW0.webp"}
    alt={"Proyecto 1"}
    class={"w-full h-80 object-cover rounded-xl"}
    width={100}
    height={100}
  />

  <div class="flex flex-col gap-3">
    <div class="flex items-center justify-between">
      <h4 class="text-xl font-bold text-secondary">Administrar Citas</h4>

      <div class="flex items-center justify-end gap-3">
        <a href="/projcts">
          <GithubIcon />
        </a>
        <a href="/projcts">
          <UrlIcon />
        </a>
      </div>
    </div>

    <div class="flex items-center gap-3 cursor-default">
      <span class="bg-primary-100/20 px-2 py-1 rounded-md">JavaScript</span>
      <span class="bg-primary-100/20 px-2 py-1 rounded-md">TypeScript</span>
      <span class="bg-primary-100/20 px-2 py-1 rounded-md">React</span>
      <span class="bg-primary-100/20 px-2 py-1 rounded-md">Tailwind</span>
    </div>
  </div>
</div>
