---
import { Image } from "astro:assets";

import UrlIcon from "@/assets/icons/UrlIcon.astro";
import GithubIcon from "@/assets/icons/GithubIcon.astro";
import type { ProjectsInteface } from "@/models/project";

interface Props {
  project: ProjectsInteface;
}

const { project } = Astro.props;
---

<div class="flex flex-col gap-5">
  <Image
    src={project.image}
    alt={`Imagen de ${project.name}`}
    class={"w-full h-80 object-cover rounded-xl"}
    width={100}
    height={100}
  />

  <div class="flex flex-col gap-3">
    <div class="flex items-center justify-between">
      <h4 class="text-xl font-bold text-secondary">{project.name}</h4>

      <div class="flex items-center justify-end gap-3">
        <a href={project.github} target="_blank">
          <GithubIcon />
        </a>
        <a href={project.url} target="_blank">
          <UrlIcon />
        </a>
      </div>
    </div>

    <div class="flex items-center gap-3 cursor-default">
      {
        project.slug.map(slug => (
          <span class="bg-primary-100/20 px-2 py-1 rounded-md">{slug}</span>
        ))
      }
    </div>
  </div>
</div>
