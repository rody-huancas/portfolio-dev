<form id="form_email" class="flex flex-col gap-5 mt-7">
  <div class="grid sm:grid-cols-2 gap-5">
    <div>
      <input
        type="text"
        name="from_name"
        id="from_name"
        placeholder="Nombre"
        class="input-field w-full py-4 px-5 bg-primary-200/10 border border-transparent rounded placeholder:text-primary-100/80 outline-none text-sm"
      />
      <span class="error-message text-red-500 text-sm"></span>
    </div>
    <div>
      <input
        type="email"
        name="from_email"
        id="from_email"
        placeholder="Correo ElectrÃ³nico"
        class="input-field w-full py-4 px-5 bg-primary-200/10 border border-transparent rounded placeholder:text-primary-100/80 outline-none text-sm"
      />
      <span class="error-message text-red-500 text-sm"></span>
    </div>
  </div>
  <input
    type="text"
    name="subject"
    id="subject"
    placeholder="Asunto"
    class="input-field w-full py-4 px-5 bg-primary-200/10 border border-transparent rounded placeholder:text-primary-100/80 outline-none text-sm"
  />
  <div>
    <textarea
      name="message"
      id="message"
      placeholder="Mensaje"
      class="input-field w-full py-3 px-5 bg-primary-200/10 border border-transparent rounded placeholder:text-primary-100/80 outline-none text-sm min-h-28 resize-none"
    ></textarea>
    <span class="error-message text-red-500 text-sm"></span>
  </div>
  <button
    type="submit"
    id="button_send"
    class="bg-primary-100/85 rounded text-dark-color py-3 hover:bg-primary-100/95 transition-colors duration-500 ease-in-out"
  >
    Enviar Mensaje
  </button>
</form>

<style>
  .input-field.error {
    border-color: #e53e3e;
  }
  .error-message {
    display: none;
  }
  .error-message.visible {
    display: block;
  }
</style>

<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
></script>
<script src="@/helpers/email.js"></script>
